generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  ASEGURADORA
  BROKER
  AUDITOR
}

enum FormStatus {
  PENDING
  APPROVED
  REJECTED
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  TRIALING
  UNPAID
}

enum PlanType {
  PLAN_1
  PLAN_2
  PLAN_3
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  passwordHash  String    @map("password_hash")
  nombre        String
  rol           UserRole  @default(BROKER)
  isActive      Boolean   @default(true) @map("is_active")
  parentId      String?   @map("parent_id")
  aseguradoraId String?   @map("aseguradora_id")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  parent          User?     @relation("UserHierarchy", fields: [parentId], references: [id])
  children        User[]    @relation("UserHierarchy")
  aseguradora     AseguradoraConfig? @relation(fields: [aseguradoraId], references: [id])
  sessions        Session[]
  passwordResets  PasswordReset[]
  auditLogs       AuditLog[]
  medicalForms    MedicalForm[]
  stripeCustomer  StripeCustomer?
  subscriptions   Subscription[]
  paymentHistory  PaymentHistory[]
  usageRecords    UsageRecord[]

  @@index([parentId])
  @@index([aseguradoraId])
  @@map("users")
}

model MedicalForm {
  id               String      @id @default(uuid())
  userId           String      @map("user_id")
  insuranceCompany String      @map("insurance_company")
  formData         Json        @map("form_data") @db.JsonB
  status           FormStatus  @default(PENDING)
  ruleVersionId    String?     @map("rule_version_id")
  originalScore    Int?        @map("original_score")
  createdAt        DateTime    @default(now()) @map("created_at")
  updatedAt        DateTime    @updatedAt @map("updated_at")

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  formPdfs    FormPdf[]
  ruleVersion RuleVersion? @relation(fields: [ruleVersionId], references: [id])

  @@index([userId])
  @@index([insuranceCompany])
  @@index([ruleVersionId])
  @@map("medical_forms")
}

model FormPdf {
  id        String   @id @default(uuid())
  formId    String   @unique @map("form_id")
  pdfUrl    String   @map("pdf_url")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  medicalForm MedicalForm @relation(fields: [formId], references: [id], onDelete: Cascade)

  @@map("form_pdfs")
}

model Session {
  id           String   @id @default(uuid())
  userId       String   @map("user_id")
  sessionToken String   @unique @map("session_token")
  expiresAt    DateTime @map("expires_at")
  createdAt    DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([sessionToken])
  @@map("sessions")
}

model PasswordReset {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  tokenHash String   @map("token_hash")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([tokenHash])
  @@map("password_resets")
}

model AuditLog {
  id         String   @id @default(uuid())
  userId     String?  @map("user_id")
  action     String
  entityId   String?  @map("entity_id")
  entityType String?  @map("entity_type")
  ipAddress  String?  @map("ip_address")
  metadata   Json?    @db.JsonB
  timestamp  DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([action])
  @@index([entityType, entityId])
  @@map("audit_logs")
}

model StripeCustomer {
  id               String   @id @default(uuid())
  userId           String   @unique @map("user_id")
  stripeCustomerId String   @unique @map("stripe_customer_id")
  createdAt        DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("stripe_customers")
}

model Subscription {
  id                   String             @id @default(uuid())
  userId               String             @map("user_id")
  stripeSubscriptionId String             @unique @map("stripe_subscription_id")
  planType             PlanType           @map("plan_type")
  status               SubscriptionStatus @default(ACTIVE)
  currentPeriodStart   DateTime           @map("current_period_start")
  currentPeriodEnd     DateTime           @map("current_period_end")
  promotionEndsAt      DateTime?          @map("promotion_ends_at")
  isInPromotion        Boolean            @default(true) @map("is_in_promotion")
  createdAt            DateTime           @default(now()) @map("created_at")
  updatedAt            DateTime           @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("subscriptions")
}

model PaymentHistory {
  id                    String   @id @default(uuid())
  userId                String   @map("user_id")
  stripePaymentIntentId String   @unique @map("stripe_payment_intent_id")
  amount                Int
  currency              String   @default("usd")
  status                String
  createdAt             DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("payment_history")
}

enum RuleLevel {
  CRITICO
  IMPORTANTE
  MODERADO
  DISCRETO
}

enum RuleCategory {
  GENERAL
  GNP
  METLIFE
  NYLIFE
}

model ScoringRuleRecord {
  id              String       @id @default(uuid())
  ruleId          String       @unique @map("rule_id")
  name            String
  level           RuleLevel
  points          Int
  description     String
  providerTarget  String       @map("provider_target")
  category        RuleCategory @default(GENERAL)
  isCustom        Boolean      @default(false) @map("is_custom")
  isActive        Boolean      @default(true) @map("is_active")
  conditions      Json?        @db.JsonB
  logicOperator   String?      @map("logic_operator")
  affectedFields  String[]     @map("affected_fields")
  hasValidator    Boolean      @default(false) @map("has_validator")
  validatorKey    String?      @map("validator_key")
  createdAt       DateTime     @default(now()) @map("created_at")
  updatedAt       DateTime     @updatedAt @map("updated_at")

  @@index([providerTarget])
  @@index([category])
  @@index([isActive])
  @@map("scoring_rules")
}

model AseguradoraConfig {
  id                String   @id @default(uuid())
  codigo            String   @unique
  nombreCompleto    String   @map("nombre_completo")
  mappingsJson      Json     @map("mappings_json") @db.JsonB
  themeConfig       Json?    @map("theme_config") @db.JsonB
  extractionRules   Json?    @map("extraction_rules") @db.JsonB
  isActive          Boolean  @default(true) @map("is_active")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  users             User[]

  @@index([codigo])
  @@map("aseguradora_configs")
}

model UsageRecord {
  id               String   @id @default(uuid())
  userId           String   @map("user_id")
  periodYear       Int      @map("period_year")
  periodMonth      Int      @map("period_month")
  reportsUsed      Int      @default(0) @map("reports_used")
  reportsLimit     Int      @default(20) @map("reports_limit")
  extraReportsUsed Int      @default(0) @map("extra_reports_used")
  extraChargesMxn  Int      @default(0) @map("extra_charges_mxn")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, periodYear, periodMonth])
  @@index([userId])
  @@map("usage_records")
}

enum RuleChangeType {
  CREATED
  UPDATED
  DELETED
  ACTIVATED
  DEACTIVATED
}

model RuleVersion {
  id              String   @id @default(uuid())
  versionNumber   Int      @map("version_number")
  rulesSnapshot   Json     @map("rules_snapshot") @db.JsonB
  rulesHash       String   @map("rules_hash")
  description     String?
  createdAt       DateTime @default(now()) @map("created_at")

  medicalForms    MedicalForm[]

  @@unique([versionNumber])
  @@index([rulesHash])
  @@map("rule_versions")
}

model RuleChangeLog {
  id              String         @id @default(uuid())
  ruleId          String         @map("rule_id")
  ruleName        String         @map("rule_name")
  changeType      RuleChangeType @map("change_type")
  previousValue   Json?          @map("previous_value") @db.JsonB
  newValue        Json?          @map("new_value") @db.JsonB
  changedBy       String?        @map("changed_by")
  changeReason    String?        @map("change_reason")
  versionNumber   Int            @map("version_number")
  createdAt       DateTime       @default(now()) @map("created_at")

  @@index([ruleId])
  @@index([versionNumber])
  @@index([createdAt])
  @@map("rule_change_logs")
}
